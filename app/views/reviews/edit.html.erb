<div class="col-md-4 col-md-offset-4">
  <h1>Edit Reivew</h1>

  <%= simple_form_for [@store,@review] do |f| %>
    <div class="form-group">
    <div id="star-rating" data-score= <%= @review.rating %>></div>
    <%= f.input :comment, input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submitting...", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    score: function() {
      return $(this).attr('data-score');
    },
    scoreName: 'review[rating]'
  });
</script>
